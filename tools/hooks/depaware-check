# license that can be found in the LICENSE file.

set -euo pipefail

repo_root=$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)
cd "$repo_root"

if ! go run github.com/tailscale/depaware -update ./cmd/viberun ./cmd/viberun-server; then
  echo "" >&2
  echo "depaware.txt generation failed." >&2
  exit 1
fi

if ! git diff --exit-code -- cmd/viberun/depaware.txt cmd/viberun-server/depaware.txt >/dev/null; then
  echo "" >&2
  echo "depaware.txt changed; please stage the updates and retry the commit." >&2
  exit 1
fi
