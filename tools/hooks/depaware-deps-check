set -euo pipefail

repo_root=$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)
cd "$repo_root"

if rg -n '(^|[[:space:]])github.com/shayne/viberun/internal/server([[:space:]]|$)' cmd/viberun/depaware.txt; then
  echo "" >&2
  echo "cmd/viberun depends on internal/server (not allowed)." >&2
  exit 1
fi

if rg -n '(^|[[:space:]])github.com/shayne/viberun/internal/tui([[:space:]]|$)' cmd/viberun-server/depaware.txt; then
  echo "" >&2
  echo "cmd/viberun-server depends on internal/tui (not allowed)." >&2
  exit 1
fi
